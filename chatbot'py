print("hello! i'm your chatbot. type exist to end the converstion.")
while True:
    user_input=input("you:").lower()
    if user_input=="hi"or user_input=="hello":
        print("Bot:Hello how can i help you?")
    elif user_input=="how are you":
        print("Bot:I'm just a programme,but i'm doing great! how are you?")
    elif user_input=="i'm fine":
        print("wow!that's good")
    elif user_input=="what is your name":
        print("Bot: i'm a simple chatbot")
    elif user_input=="bye":
        print("Bot:Goodbye!Have a great day.")
    elif user_input=="help":
        print("sorry i can't help you")
    elif user_input=="exit":
        print("Bot:Exiting.talk you later")
    else:
        print("Bot:I'm sorry,i don't understand that")
    
    
    
    
